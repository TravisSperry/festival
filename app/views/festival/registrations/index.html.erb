<%= title "Registrations" %>
<div class="container">
  <h1 class="mb-5">Registrations</h1>
  <p>
    Total number of students for <%= Date.today.year %>: <%= @registrations.sum(:student_count) %>
  </p>
  <table class=" table datatable display" width="100%">
    <thead>
      <tr>
        <th>Date</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Student count</th>
        <th>Email</th>
        <th>Total</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @registrations.each do |registration| %>
        <tr>
          <td><%= registration.created_at.strftime('%m-%e-%y') %></td>
          <td><%= registration.first_name %></td>
          <td><%= registration.last_name %></td>
          <td><%= registration.student_count %></td>
          <td><%= registration.email %></td>
          <td><%= "$#{'%.2f' % (registration.total/100)}" %></td>
          <td><%= link_to 'Show', festival_registration_path(registration) %></td>
          <td><%= link_to 'Edit', edit_festival_registration_path(registration) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Registration', new_festival_registration_path, class: 'btn btn-secondary btn-lg success' %>
  </div>
