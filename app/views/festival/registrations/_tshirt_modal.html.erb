<!-- TShirtModal -->
<div class="modal fade" id="tshirtModal" tabindex="-1" role="dialog" aria-labelledby="tshirtModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="tshirtModalLabel">JRMF Shirt Sample</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= image_tag 'jrmf_shirt.png', width: '100%' %>
      </div>
      <div class="modal-footer">
        <p class="mb-0 text-center">
          <strong>The sizes of the shirts we use run small. In years past, students who would normally opt for a youth medium preferred and youth large.</strong>
        </p>
      </div>
    </div>
  </div>
</div>
