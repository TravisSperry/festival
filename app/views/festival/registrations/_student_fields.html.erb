<table class="fields" style="width:100%;border-spacing:5px;">
  <tr>
    <td class="student_first_name">
      <%= f.hidden_field :id %>
      <%= f.input :first_name, label: false, placeholder: "First Name", input_html: {style: "width:99%;"} %>
    </td>
    <td class="student_last_name">
      <%= f.input :last_name, label: false, placeholder: "Last Name", input_html: {style: "width:99%;"} %>
    </td>
    <td class="student_grade">
      <%= f.input :grade, collection: Student::GRADES, include_blank: "Select Grade", label: false %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.input :shirt, label: "Purchase JRMF T-Shirt (Additional $15)" %>
    </td>
    <td>
      <%= f.input :shirt_size, collection: Student::SHIRT_SIZES, label: false, include_blank: "Select Size", disabled: true %>
    </td>
    <td class="student_remove" valign="middle">
      <%= f.link_to_remove do %>
        <i class="fa fa-times fa-2x close" style="margin-bottom:17px;color:#d93039;" title="Remove Student"></i>
      <% end %>
    </td>
  </tr>
</table>
